------------------------------
provisioning.yml
------------------------------
    - yum
        yum update

    - nginx
        install epel
        install nginx package
        install nginx

    - package-for-ruby
        install packages for ruby
        install repo yarn
        install yarn
        setup node.js
        install node.js

    - rbenv
        install rbenv
        path for rbenv
        activate path for rbenv
        install ruby-build
        install ruby
        global & rehash
        check current ruby version
        install bundler

    - mysql
        install mysql repo
        edit repo for activate mysql 8
        install mysql 8
        start enable mysql



------------------------------
setting.yml
------------------------------
    - config
        mkdir & permission
        clone app from git

        secret-key & credentials => EC2にログインして手動でする
                    [pc]/app/config/master.key  の暗号
                        => [EC2]/app/config/master.key

                    [pc]/app/$ bundle exec rake secret  の値
                        => [EC2]/app/$ EDITOR=vim bin/rails credentials:edit

                    ※awsのkeyもこの時編集してもいいかも！

        config DB
                    gem 'dotenv-rails' 事前に入れとく
                    
        config unicorn
        config nginx



------------------------------
deployment.yml
------------------------------
    - deploy
        create db
        migrate db
        seed db
        precompile aset

        start unicorn
        restart nginx
        